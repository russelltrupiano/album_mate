= provide(:title, "Home")
.logged-out-container.center
  .application-icon-wrapper
    %img{:src => "http://www.webdesign.org/img_articles/12567/16.jpg", :alt => "application icon", :class => "application-icon"}/
  .session-start-wrapper
    .log-in-wrapper
      = link_to 'Log In', login_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect log-in-button pad-small-button"
